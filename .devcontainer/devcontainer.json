{
  "name": "JavaGui",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },

  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "jdkDistro": "ms",
      "gradleVersion": "latest",
      "mavenVersion": "latest",
      "antVersion": "latest",
      "groovyVersion": "latest"
    }
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "noVNC",
      "onAutoForward": "openBrowser"
    },
    "otherPorts": {
      "onAutoForward": "ignore"
    }
  },
  "postStartCommand": "supervisord -c /etc/supervisor/conf.d/supervisord-novnc.conf"
}
